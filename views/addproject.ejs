<% include partials/header %>
    <div class="container">
        <h1 style="text-align: center;">Add a new Project</h1>

        <div class="row" style="margin: 25px auto">
            <div style="width: 30%; margin: 0 auto;">
                <form action="/projectdisplaypost" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" placeholder="Project Name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="image" placeholder="Image URL">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-outline-secondary btn-block">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <% include partials/footer %>